<div class="flex justify-center">
  <div class="w-full md:w-2/3 mt-4">
    <div class="shadow card">
      <div class="card-header flex-col items-start">
        <h3 class="card_title">
          <%= gettext("Profile") %>
        </h3>
        <p class="card_subtitle">
          <%= gettext("Change your profile") %>
        </p>
      </div>
      <div class="card-body prose">

        <%= form_for @profile_changeset, Routes.user_settings_path(@conn, :update_profile), fn f -> %>
          <%= if @profile_changeset.action do %>
            <div class="alert alert-danger text-red-600">
              <p><%= gettext("Oops, something went wrong! Please check the errors below.") %></p>
            </div>
          <% end %>

          <%= hidden_input f, :action, name: "action", value: "update_name" %>

          <div class="mb-6">
            <%= label f, :name, gettext("Name"), class: "form-label" %>
            <%= text_input f, :name, required: true, class: "form-input" %>
            <span class="text-red-600"><%= error_tag f, :name %></span>
          </div>

          <div class="mt-4 mb-2">
            <%= submit gettext("Save profile"), class: "btn btn-primary btn-sm" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
